{
  "name": "OnlyCode",
  "private": "true",
  "devDependencies": {
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "nodemon": "^3.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.1",
    "@dotenvx/dotenvx": "^0.44.1",
    "cross-env": "^7.0.3",
    "node-ssh": "^13.2.0"
  },
  "scripts": {
    "start:frontend": "cd frontend && npm run start",
    "start:backend": "cd backend && npm run start",
    "build:frontend": "cd frontend && npm run build",
    "deploy:frontend": "dotenvx run --env-file=.env -- npm run build:frontend && dotenvx run --env-file=.env -- node scripts/deploy-client.js",
    "deploy:backend": "dotenvx run --env-file=.env -- node scripts/deploy-backend.js",
    "start": "npm-run-all --parallel start:frontend start:backend",
    "lint": "eslint --quiet",
    "prettier": "prettier '**/*.{svg,yml,js,ts,jsx,tsx,html,md,json,mjs}' --write"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,yml}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.css": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "workspaces": [
    "frontend",
    "backend"
  ]
}

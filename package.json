{
  "name": "OnlyCode",
  "private": "true",
  "devDependencies": {
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "nodemon": "^3.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.1",
    "@dotenvx/dotenvx": "^0.44.1"
  },
  "scripts": {
    "start:frontend": "cd frontend && npm run start",
    "start:backend": "cd backend && npm run start",
    "start": "npm-run-all --parallel start:frontend start:backend",
    "lint": "eslint --quiet",
    "prettier": "prettier '**/*.{svg,yml,js,ts,jsx,tsx,html,md,json,mjs}' --write"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,yml}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.css": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "workspaces": [
    "frontend",
    "backend"
  ]
}
